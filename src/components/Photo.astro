---
import type { ImageMetadata } from "astro"
import { Image } from "astro:assets"
import PhotoOnHover from "./PhotoOnHover.tsx"

interface Props {
  imagePath: string
  altText: string
  time: string
  location: string
  description?: string
}

const { imagePath, altText } = Astro.props
const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/photos/**/*.{jpeg,jpg,png,gif}"
)

if (!images[imagePath])
  throw new Error(
    `"${imagePath}" does not exist in glob: "src/photos/*.{jpeg,jpg,png,gif}"`
  )
---

<div
  class="relative w-full overflow-hidden rounded-xl bg-gray-100 object-contain md:max-h-[90dvh]"
>
  <PhotoOnHover
    client:visible
    time={Astro.props.time}
    location={Astro.props.location}
    description={Astro.props.description}
  />
  <Image
    class="max-h-[90dvh] w-full object-contain"
    src={images[imagePath]()}
    alt={altText}
  />
</div>
